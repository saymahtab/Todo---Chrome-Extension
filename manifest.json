{
  "manifest_version": 3,
  "name": "Todo",
  "version": "1.0",
  "description": "A Chrome extension for a feature-rich To-Do List with reminders and notifications.",
  "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
  },
  "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon48.png"
  },
  "permissions": [
      "alarms",
      "notifications",
      "storage"
  ],
  "background": {
      "service_worker": "background.js"
  }
}
